<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/balance_edit_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_edit_balance"
        android:layout_width="405dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="0dp"
        android:text="@string/InputNewBalance"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txt_dialog_yen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_edit_balance"
        android:layout_alignParentStart="true"
        android:layout_marginStart="59dp"
        android:layout_marginTop="11dp"
        android:text="@string/Yen"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_edit_balance"
        android:layout_width="261dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_edit_balance"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="73dp"
        android:layout_toEndOf="@+id/txt_dialog_yen"
        android:ems="10"
        android:hint="@string/_100000"
        android:inputType="numberSigned"
        android:maxLength="9"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txt_reset_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_edit_balance"
        android:layout_marginTop="0dp"
        android:text="@string/Type0Reset"
        android:textAlignment="center"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btn_editbalance"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_reset_help"
        android:layout_alignParentStart="false"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="131dp"
        android:layout_marginTop="10dp"
        android:text="@string/Submit" />
</RelativeLayout>