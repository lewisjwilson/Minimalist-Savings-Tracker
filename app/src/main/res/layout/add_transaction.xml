<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_transactions"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="91dp"
        android:text="@string/Amount"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txt_yen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="91dp"
        android:layout_toEndOf="@+id/txt_amount"
        android:text="@string/Yen"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edit_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="28dp"
        android:layout_toEndOf="@+id/txt_yen"
        android:autofillHints=""
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/txt_reference"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_amount"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="65dp"
        android:text="@string/Reference"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edit_reference"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_amount"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="51dp"
        android:layout_toEndOf="@+id/txt_reference"
        android:autofillHints=""
        android:ems="10"
        android:inputType="textShortMessage" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_reference"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/Submit" />

</RelativeLayout>